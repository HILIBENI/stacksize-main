    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="Plant_GrassAnima"]/plant/lifespanDaysPerGrowDays</xpath>
        <value>
            <lifespanDaysPerGrowDays>120</lifespanDaysPerGrowDays>
